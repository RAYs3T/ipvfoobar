{
  "name": "IPvFooBar",
  "manifest_version": 2,
  "version": "1.0",
  "minimum_chrome_version": "26",
  "description": "Display the server IP address, with a realtime summary of IPv4, IPv6, DNS, WHOIS and HTTPS information across all page elements. Fork of IPvFoo (pmarks-net/ipvfoo). Google DNS (dns.google/8.8.8.8) is used for resolving DNS queries.",
  "homepage_url": "https://github.com/ondrejvrabel/ipvfoo",
  "icons": {
    "16": "icon16.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [ "common.js", "background.js" ]
  },
  "page_action": {
    "dummy": "http://crbug.com/86449"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "contextMenus",
    "storage",
    "webNavigation",
    "webRequest",
    "<all_urls>"
  ],
  "applications": {
      "gecko": {
          "id": "ipvfoobar@napr.eu"
      }
  }
}
